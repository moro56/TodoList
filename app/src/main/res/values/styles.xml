<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="font">@font/niramit</item>
        <item name="android:fontFamily">@font/niramit</item>
    </style>

    <style name="AppButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:minHeight">40dip</item>
    </style>

    <style name="FormButton" parent="AppButton">
        <item name="android:background">@drawable/form_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolbarTitleStyle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/niramit</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
